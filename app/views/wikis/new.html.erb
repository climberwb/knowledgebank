<h1>New Wiki</h1>
 <div class= "row">
   <div class = "col-md-4">
     <p>Guidlines for wikis</p>
     <ul>
       <li>Keep it clean</li>
       <li>Keep it safe</li>
       <li>Keep it classy Sandiego </li>
     </ul>
   </div>
 </div>
<div class = "col-md-8">
  <%= puts "WIKI: #{@wiki} !!!!!!!!!" %>
<%= puts "COLLAB: #{@collaboration} !!!!!!!!!!" %>
  <%= form_for @wiki do |f| %>
    <div class = "form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
    </div>
    <div class = "form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows:20, class: 'form-control', placeholder:"write your wiki here" %>
    </div>
    <div class="form-group">
        <%= f.label :public, class: 'checkbox' do %>
          <%= f.check_box :public %> Public wiki
        <% end %>
    </div>
    <div class = "form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  <% end %>
  </div>

</div>
<%= render partial: "collaboration/new",locals: { wiki: @wiki, collaboration: @collaboration} %>
<%= puts "WIKI: #{wiki} !!!!!!!!!" %>
<%= puts "COLLAB: #{collaboration} !!!!!!!!!!" %>