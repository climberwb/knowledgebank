<h1>All wikis</h1>
<% if policy(Wiki.new).create? %>
 <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
<% end %>
<% @wikis.each do |wiki| %> 
<div class = "media">
  <div class = "media-body">
    <div class = "media-heading">
       <p><%= link_to wiki.title, wiki_path(wiki.id)%></p>
     </div>
     <small>
      submitted <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.name %><br/>
     </small>
   </div>
 </div>
<%end%>


